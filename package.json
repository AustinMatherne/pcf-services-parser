{
  "name": "pcf-services-parser",
  "version": "1.0.3",
  "description": "A parser for PCF service credentials",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=0.8 <0.12"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "preversion": "npm run lint && npm test && npm run run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AustinMatherne/pcf-services-parser.git"
  },
  "keywords": [
    "PCF",
    "VCAP",
    "Services",
    "Credentials",
    "ENV",
    "Parser"
  ],
  "author": {
    "name": "Austin Matherne",
    "email": "AustinMatherne@ProtonMail.ch",
    "url": "https://github.com/AustinMatherne"
  },
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/AustinMatherne/pcf-services-parser/issues"
  },
  "homepage": "https://github.com/AustinMatherne/pcf-services-parser#readme",
  "dependencies": {
    "cfenv": "1.1.0",
    "lodash": "4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@commitlint/travis-cli": "7.2.1",
    "@types/jest": "23.3.9",
    "@types/lodash": "4.14.118",
    "@types/node": "10.12.10",
    "cz-conventional-changelog": "2.1.0",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "jest-sonar-reporter": "2.0.0",
    "precise-commits": "1.0.2",
    "prettier": "1.15.2",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6"
  }
}
